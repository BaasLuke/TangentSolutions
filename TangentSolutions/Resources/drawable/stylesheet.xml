<?xml version="1.0" encoding="UTF-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item  android:state_pressed="true">
    <shape>
      <solid
          android:color="@color/white" />
      <stroke
          android:width="1dp"
          android:color="@color/blue" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="12dp"
          android:top="12dp"
          android:right="12dp"
          android:bottom="12dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/blue"
          android:endColor="@color/black"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/white" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="12dp"
          android:top="12dp"
          android:right="12dp"
          android:bottom="12dp" />
    </shape>
  </item>
</selector>


